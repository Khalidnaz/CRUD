@{
    ViewBag.Title = "Index";
    Layout = null;
}




<head>
    <meta charset="utf-8">
    <title>Face - Free Bootstrap 4 Personal Template</title>
    <meta name="description" content="Face it." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <!--icons-->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />

    <link href="~/Wireddots-face/style.css" rel="stylesheet" />
</head>
<body ng-app="GameReviewApp">
    <!--hero section-->
    <section class="bg-alt hero p-0">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 bg-primary-dark py-5 col-fixed text-center">
                    <div class="mb-5 text-center">
                        <h1 class="main-heading">Game Review</h1>
                    </div>
                    <ul class="nav flex-column menu-left mt-5">
                        <li class="nav-item">
                            <a class="nav-link page-scroll" href="#welcome">Review</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link page-scroll" href="#work">Add A Review</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link page-scroll" href="#about">Who We Are</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link page-scroll" href="#connect">Connect with us</a>
                        </li>*@
                    </ul>
                    @*<p class="mt-4 social-icon">
                        <a href="https://twitter.com/" target="_blank"><em class="ion-social-twitter text-twitter-alt icon-sm mr-3"></em></a>
                        <a href="https://github.com/" target="_blank"><em class="ion-social-github text-github-alt icon-sm mr-3"></em></a>
                        <a href="https://www.linkedin.com/" target="_blank"><em class="ion-social-linkedin text-linkedin-alt icon-sm mr-3"></em></a>
                    </p>*@
                    @*<p class="small">&copy; Face. All rights reserved.</p>*@
                </div>
                <div class="col-sm-9 offset-sm-3 px-0">
                    <!--welcome-->
                    <section class="hero bg-primary" id="welcome" style="overflow: scroll;">
                        <div class="container" ng-controller="displayReviewController as drc">
             
                            <div class="inner align-middle wow fadeIn">
                                <h1 class="pt-5 text-white text-uppercase">Game Reviews</h1>
                                <br />
                                <div ng-repeat="items in drc.model">

                                    <br />
                                    <hr />
                                    <h2>
                                        {{items.Title}}
                                    </h2>
                                    <div>
                                        {{items.Description}}
                                    </div>
                                    <div>
                                        {{items.Platform}}
                                    </div>
                                    <div>
                                        {{items.Review}}
                                    </div>

                                    <div>
                                        {{items.Price}}
                                    </div>
                                  
                                    <br />

                                    <div ng-show="x" style="overflow: scroll;">
                                       <br>
                                        <div>Title</div>
                                        <input type="text" id="normal-field" class="form-control" placeholder="Title" ng-model="items.Title">

                                        <div>Platform</div>

                                        <input type="text" id="normal-field" class="form-control" placeholder="Platform" ng-model="items.Platform" />

                                        <div>Description</div>

                                        <textarea class="form-control" rows="6" cols="50" ng-model="items.Description"></textarea>

                                        <div>Review</div>
                                        <textarea class="form-control" rows="6" cols="50" ng-model="items.Review"></textarea>


                                    </div>

                                    <button class="btn btn-primary btn-sm" ng-click="x = !x" ng-hide="x" type="button">update</button>
                                
                                        <input ng-show="x" type="button" style='float: right' class="btn btn-danger btn-rounded pull-right" value="Update" ng-click="drc.updateArticle(items)" />

                                        <input type="button" style='float: right' class="btn btn-danger btn-rounded pull-right" value="Delete" ng-click="drc.deleteArticle(items)" />

                                   
                                </div>

                                <br /><br />

                            </div>
                        </div>
                    </section>

                    <!--who we are-->
                    <section class="bg-style1" id="work" ng-controller="displayReviewController as drc">
                        <div class="container">
                            <div class="inner">
                                <div class="row">
                                    <div class="col-xs-12 wow fadeIn">
                                      
                                    </div>
                                </div>

                                <h1> Add Review</h1>
                                <div class="col-md-9">
                                    <div>Title</div>
                                    <input type="text" id="normal-field" class="form-control"  ng-model="drc.postmodel.Title">

                                    <div>Platform</div>

                                    <input type="text" id="normal-field" class="form-control"  ng-model="drc.postmodel.Platform" />

                                    <div>Description</div>

                                    <textarea class="form-control" rows="6" cols="50" ng-model="drc.postmodel.Description"></textarea>

                                    <div>Review</div>
                                    <textarea class="form-control" rows="6" cols="50" ng-model="drc.postmodel.Review"></textarea>

                                    <div>GameStop Url for Price</div>
                                    <input type="text" class="form-control" ng-model="drc.scrapeModel.Url" ng-blur="drc.getScrape(drc.scrapeModel.Url)"/>

                                    <div>Price at GameStop</div>
                                    @*<input type="text" id="normal-field" class="form-control" ng-model="drc.postmodel.Price" ng-change="drc.scrapModel.Price=drc.postmodel.Price" value="{{drc.postmodel.Price=drc.scrapModel.Price}}" />*@
                                    <input type="text" id="normal-field" class="form-control" ng-model="drc.postmodel.Price"/>

                                    <input type="button" style='float: right' class="btn btn-danger btn-rounded pull-right" value="Post Article" ng-click="drc.postReview()" />

                                    
                                    
                                    <div class="row text-center pt-5">
                                        <div class="col-md-4 wow fadeInleft">
                                            <div class="border-all">
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!--who we are-->
                    <section class="bg-style3" id="about">
                        <div class="container">
                            <div class="inner">
                                <div class="row">
                                    <div class="col-xs-12">
                                        @*<h2 class="text-white text-uppercase">Who we are 🙌</h2>
                                        <p class="pt-4">
                                            Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa.
                                        </p>*@
                                    </div>
                                </div>
                            
                            </div>
                        </div>
                    </section>

     
                </div>
            </div>
        </div>
    </section>

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/reviewService.js"></script>
    <script src="~/Scripts/app/Controller/displayReviewController.js"></script>

    @*<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
    @*<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Wireddots-face/scripts.js"></script>

</body>
